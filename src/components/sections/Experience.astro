---
import Section from "@/components/Section.astro";

import { work } from "@cv";
---

<Section title="Experiencia laboral">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, url, highlights }) => {
          const months = [
            "Enero",
            "Febrero",
            "Marzo",
            "Abril",
            "Mayo",
            "Junio",
            "Julio",
            "Agosto",
            "Septiembre",
            "Octubre",
            "Noviembre",
            "Diciembre",
          ];
          const startDateObj = new Date(startDate);
          const startYear = startDateObj.getFullYear();
          const startMonth = startDateObj.getMonth();
          const endDateObj = endDate ? new Date(endDate) : null;
          const endYear = endDateObj ? endDateObj.getFullYear() : "Actualmente";
          const endMonth = endDateObj ? endDateObj.getMonth() : "";
          const period = `${months[startMonth]} ${startYear} - ${endMonth ? months[endMonth] : ""} ${endYear}`;
          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>{name}</h3>
                    <h4>{position}</h4>
                  </div>

                  <time>{period}</time>
                </header>
                <footer>
                  <p>{summary}</p>
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: row;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h4 {
    font-weight: 400;
    color: #222;
    margin: 5px 0;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
  }
</style>
